{
  "name": "omniaural",
  "version": "1.0.0",
  "description": "A lightweight global state manager",
  "main": "index.js",
  "scripts": {
    "prepare": "yarn build",
    "test": "jest",
    "build": "babel ./src -d . --copy-files && mv OmniAural.js index.js",
    "publish:npm": "rm -rf dist && mkdir dist && babel ./src -d dist --copy-files && mv dist/OmniAural.js dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn build && git add ."
    }
  },
  "author": "Creon Creonopoulos",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.9.4",
    "babel-jest": "^25.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "node-fetch": "^2.6.0",
    "react": "^16.13.0",
    "react-test-renderer": "^16.13.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
